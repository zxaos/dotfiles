" Allow hidden buffers (not displayed but with modifications)
set hidden

" Show partial commands on the last line of the screen
set showcmd

" Open splits in more intuitive positions
set splitbelow
set splitright

" Show line numbers
set number

" Preffered spacing default when not overriden by a specific syntax
" Two space wide tabs
set tabstop=2
set softtabstop=2
" Expand them all
set expandtab
" Indent by 2 spaces by default
set shiftwidth=2
